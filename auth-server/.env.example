# Better Auth server URL for this local process
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_PORT=3000

# IMPORTANT: generate with `openssl rand -base64 32`
BETTER_AUTH_SECRET=replace-me

# Production persistence (PostgreSQL)
# Example: postgres://user:pass@host:5432/dbname?sslmode=require
DATABASE_URL=
# Set to false only for local DBs without TLS.
DATABASE_SSL=true
# Set to false only if your DB uses self-signed certs and you trust the network.
DATABASE_SSL_REJECT_UNAUTHORIZED=true

# JWT values consumed by Convex customJwt config
BETTER_AUTH_ISSUER_URL=http://localhost:3000
BETTER_AUTH_AUDIENCE=convex

# Optional social provider
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
